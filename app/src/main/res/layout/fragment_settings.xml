<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy_darker">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_back"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:icon="@drawable/ic_arrow_back"
            app:iconTint="@color/primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Settings"
            android:textColor="@color/text_high"
            android:textSize="18sp"
            android:fontFamily="sans-serif-black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_header">

        <!-- Use LinearLayout so items stack naturally — no broken constraint chains -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="32dp"
            android:paddingBottom="100dp">

            <!-- ── ELECTRICITY TARIFF ─────────────────────────────────── -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_bolt"
                    app:tint="@color/primary" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="ELECTRICITY TARIFF"
                    android:textColor="@color/text_medium"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif-black"
                    android:letterSpacing="0.2" />
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_tariff"
                style="@style/Widget.Kadali.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set your local rate per kWh to sync costs across all rooms and devices."
                        android:textColor="@color/text_medium"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:layout_marginBottom="24dp" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/prefix_rp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="Rp"
                            android:textColor="@color/primary"
                            android:textSize="20sp"
                            android:fontFamily="sans-serif-black"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@id/et_tariff_container"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/et_tariff_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxStrokeWidth="2dp"
                            app:boxStrokeColor="@color/border_navy"
                            app:boxStrokeWidthFocused="2dp"
                            app:boxCornerRadiusBottomEnd="16dp"
                            app:boxCornerRadiusBottomStart="16dp"
                            app:boxCornerRadiusTopEnd="16dp"
                            app:boxCornerRadiusTopStart="16dp"
                            app:hintEnabled="false"
                            app:layout_constraintTop_toTopOf="parent">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_tariff"
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:background="@color/navy_darker"
                                android:inputType="numberDecimal"
                                android:paddingStart="60dp"
                                android:paddingEnd="60dp"
                                android:text="1444.70"
                                android:textColor="@color/text_high"
                                android:textSize="32sp"
                                android:fontFamily="sans-serif-black" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:text="/kWh"
                            android:textColor="@color/text_low"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@id/et_tariff_container"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_save_settings"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_marginTop="24dp"
                        android:text="Save Changes"
                        android:textColor="@color/navy_darker"
                        android:fontFamily="sans-serif-black"
                        app:cornerRadius="20dp"
                        app:backgroundTint="@color/primary"
                        app:elevation="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ── APP PREFERENCES ────────────────────────────────────── -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="12dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_settings"
                    app:tint="@color/primary" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="APP PREFERENCES"
                    android:textColor="@color/text_medium"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif-black"
                    android:letterSpacing="0.2" />
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_prefs"
                style="@style/Widget.Kadali.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_about"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:paddingHorizontal="16dp"
                        android:background="?attr/selectableItemBackground">
                        <ImageView
                            android:id="@+id/icon_about"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@color/navy_darker"
                            android:padding="10dp"
                            android:src="@drawable/ic_bolt"
                            app:tint="@color/primary"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />
                        <TextView
                            android:id="@+id/title_about"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="About App"
                            android:textColor="@color/text_high"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-bold"
                            app:layout_constraintStart_toEndOf="@id/icon_about"
                            app:layout_constraintTop_toTopOf="@id/icon_about" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kadali electricity tracker"
                            android:textColor="@color/text_low"
                            android:textSize="11sp"
                            app:layout_constraintStart_toStartOf="@id/title_about"
                            app:layout_constraintTop_toBottomOf="@id/title_about" />
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="@color/text_low"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ── REPORTS ─────────────────────────────────────────────── -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="12dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_saving"
                    app:tint="@color/primary" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="REPORTS"
                    android:textColor="@color/text_medium"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif-black"
                    android:letterSpacing="0.2" />
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_reports"
                style="@style/Widget.Kadali.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Generate a full energy analysis PDF report covering all rooms and devices."
                        android:textColor="@color/text_medium"
                        android:textSize="13sp"
                        android:layout_marginBottom="20dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_save_pdf"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Save PDF Report"
                        android:textColor="@color/navy_darker"
                        android:fontFamily="sans-serif-black"
                        app:cornerRadius="16dp"
                        app:backgroundTint="@color/primary"
                        app:icon="@drawable/ic_saving"
                        app:iconTint="@color/navy_darker"
                        app:iconGravity="textStart"
                        app:elevation="6dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- App Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KADALI"
                    android:textColor="@color/text_low"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif-black"
                    android:letterSpacing="0.3" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Version 2.4.0 (Build 2026)"
                    android:textColor="@color/text_low"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
