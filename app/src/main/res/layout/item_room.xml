<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.Kadali.Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_room_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/navy_darker"
            android:padding="12dp"
            android:src="@drawable/ic_room_placeholder"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
            app:tint="@color/primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/iv_room_icon"
            app:layout_constraintEnd_toStartOf="@id/layout_cost"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv_room_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Living Room"
                android:textColor="@color/text_high"
                android:textSize="16sp"
                android:fontFamily="sans-serif-bold"
                tools:text="Living Room" />

            <TextView
                android:id="@+id/tv_device_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 Devices active"
                android:textColor="@color/text_medium"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                tools:text="12 Devices active" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv_room_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 0"
                android:textColor="@color/primary"
                android:textSize="16sp"
                android:fontFamily="sans-serif-black"
                tools:text="Rp 12.500" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PER DAY"
                android:textColor="@color/text_low"
                android:textSize="9sp"
                android:fontFamily="sans-serif-black"
                android:textAllCaps="true"
                android:letterSpacing="0.1" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
