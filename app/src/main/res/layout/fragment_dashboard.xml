<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy_darker">

    <!-- Header Section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingTop="20dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- App logo / icon circle -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_app_icon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:cardBackgroundColor="@color/primary"
            app:cardCornerRadius="14dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_bolt"
                app:tint="@color/navy_darker" />
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="@id/card_app_icon"
            app:layout_constraintEnd_toStartOf="@id/btn_notifications"
            app:layout_constraintStart_toEndOf="@id/card_app_icon"
            app:layout_constraintTop_toTopOf="@id/card_app_icon">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ELECTRICITY MONITOR"
                android:textColor="@color/text_low"
                android:textSize="9sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:letterSpacing="0.12" />

            <TextView
                android:id="@+id/tv_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kadali"
                android:textColor="@color/text_high"
                android:textSize="20sp"
                android:fontFamily="sans-serif-black" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_notifications"
            style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:backgroundTint="@color/navy_dark"
            app:icon="@drawable/ic_notifications"
            app:iconTint="@color/text_high"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            app:strokeColor="@color/border_navy"
            app:strokeWidth="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/sv_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_header">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:paddingBottom="100dp">

            <!-- Primary Summary Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_main_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/primary"
                app:cardElevation="12dp"
                app:cardCornerRadius="24dp"
                app:strokeWidth="0dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/label_monthly_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monthly Estimated Cost"
                        android:textColor="#99000000"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:letterSpacing="0.05"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_wallet"
                        app:tint="#CC000000"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_monthly_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Rp 0"
                        android:textColor="@color/navy_darker"
                        android:textSize="36sp"
                        android:fontFamily="sans-serif-black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/label_monthly_cost"
                        tools:text="Rp 450.000" />

                    <TextView
                        android:id="@+id/tv_monthly_label_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Estimated this month"
                        android:textColor="#77000000"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_monthly_cost" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Chart Section -->
            <TextView
                android:id="@+id/label_consumption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Top 5 Devices"
                android:textColor="@color/text_high"
                android:textSize="18sp"
                android:fontFamily="sans-serif-black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_main_summary" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_chart"
                style="@style/Widget.Kadali.Card"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/label_consumption">
                
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Rooms Breakdown Section -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_rooms_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_chart">

                <TextView
                    android:id="@+id/label_rooms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rooms Breakdown"
                    android:textColor="@color/text_high"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <!-- Sort Toggle Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_sort_rooms"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Newest"
                    android:textSize="11sp"
                    app:icon="@drawable/ic_sort"
                    app:iconSize="14dp"
                    app:iconGravity="textStart"
                    app:strokeColor="@color/primary"
                    android:textColor="@color/primary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Search Bar -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_search_rooms"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:boxBackgroundColor="@color/navy_light"
                app:boxStrokeColor="@color/border_navy"
                app:boxCornerRadiusTopStart="14dp"
                app:boxCornerRadiusTopEnd="14dp"
                app:boxCornerRadiusBottomStart="14dp"
                app:boxCornerRadiusBottomEnd="14dp"
                app:hintTextColor="@color/text_medium"
                app:startIconDrawable="@drawable/ic_search"
                app:startIconTint="@color/text_medium"
                app:layout_constraintTop_toBottomOf="@id/layout_rooms_header">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_search_rooms"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Search roomsâ€¦"
                    android:textColor="@color/text_high"
                    android:textColorHint="@color/text_medium"
                    android:textSize="14sp"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:background="@null" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_rooms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/layout_search_rooms"
                tools:listitem="@layout/item_room" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_room"
        style="@style/Widget.Kadali.FAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:srcCompat="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/layout_empty_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_header"
        tools:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_no_rooms"
            app:tint="@color/primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="No Rooms Tracked"
            android:textAppearance="@style/TextAppearance.Kadali.Headline" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:paddingHorizontal="32dp"
            android:text="Start by adding a room to monitor electricity usage."
            android:textColor="@color/text_medium"
            android:textAppearance="@style/TextAppearance.Kadali.Body" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_room_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Add Your First Room"
            android:paddingHorizontal="32dp"
            android:paddingVertical="12dp"
            app:cornerRadius="16dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
