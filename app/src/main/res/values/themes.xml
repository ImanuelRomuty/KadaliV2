<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.KadaliV2" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorError">@color/colorError</item>
        
        <!-- Modern UI Shape Refinement -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.KadaliV2.Medium</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.KadaliV2.Large</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="ShapeAppearance.KadaliV2.Medium" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.KadaliV2.Large" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Widget.KadaliV2.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_tint</item>
        <item name="itemTextColor">@color/bottom_nav_tint</item>
        <item name="backgroundTint">@color/colorSurface</item>
    </style>

    <style name="Theme.KadaliV2" parent="Base.Theme.KadaliV2" />
    
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorSurface</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_app_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.KadaliV2</item>
    </style>
</resources>