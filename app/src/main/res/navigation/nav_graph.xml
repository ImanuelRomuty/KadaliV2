<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dashboardFragment">

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.kadaliv2.ui.dashboard.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboard_to_addRoom"
            app:destination="@id/addRoomFragment" />
        <action
            android:id="@+id/action_dashboard_to_roomDetail"
            app:destination="@id/roomDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/simulationFragment"
        android:name="com.example.kadaliv2.ui.simulation.SimulationFragment"
        android:label="Simulation"
        tools:layout="@layout/fragment_simulation" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.kadaliv2.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/addRoomFragment"
        android:name="com.example.kadaliv2.ui.room.AddRoomFragment"
        android:label="Add Room"
        tools:layout="@layout/fragment_add_room">
        <argument
            android:name="roomId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

    <fragment
        android:id="@+id/roomDetailFragment"
        android:name="com.example.kadaliv2.ui.room.RoomDetailFragment"
        android:label="Room Detail"
        tools:layout="@layout/fragment_room_detail">
        <argument
            android:name="roomId"
            app:argType="string" />
        <action
            android:id="@+id/action_roomDetail_to_addDevice"
            app:destination="@id/addDeviceFragment" />
        <action
            android:id="@+id/action_roomDetail_to_editRoom"
            app:destination="@id/addRoomFragment" />
    </fragment>

    <fragment
        android:id="@+id/addDeviceFragment"
        android:name="com.example.kadaliv2.ui.device.AddDeviceFragment"
        android:label="Add Device"
        tools:layout="@layout/fragment_add_device">
        <argument
            android:name="roomId"
            app:argType="string" />
        <argument
            android:name="deviceId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

</navigation>
